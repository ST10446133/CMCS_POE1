<Window x:Class="POE_CMCS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POE CMCS - Login"
        Height="370" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Contract Monthly Claim System (CMCS)"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Username"/>
            <TextBox x:Name="UsernameTextBox" Width="280" Height="28"/>

            <Label Content="Password" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="280" Height="28"/>

            <Label Content="Select Role" Margin="0,10,0,0"/>
            <ComboBox x:Name="RoleComboBox" SelectedIndex="0" Height="25">
                <ComboBoxItem Content="Lecturer"/>
                <ComboBoxItem Content="Programme Coordinator"/>
                <ComboBoxItem Content="Academic Manager"/>
            </ComboBox>


            <Button x:Name="LoginButton"
                    Content="Login"
                    Width="120" Height="34"
                    Margin="0,14,0,0"
                    Click="LoginButton_Click"/>
            <TextBlock x:Name="StatusTextBlock"
                       Foreground="Red" Margin="0,8,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <TextBlock Grid.Row="3"
                   Text="© PROG6212 - POE_CMCS"
                   FontSize="11"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
