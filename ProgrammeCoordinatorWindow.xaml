<Window x:Class="POE_CMCS.ProgrammeCoordinatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Programme Coordinator - Manage Claims"
        Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f2f2f2">

    <Grid Margin="20">
        <TextBlock Text="Programme Coordinator - Manage Claims"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <DataGrid x:Name="ClaimsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="#E8E8E8"
                  RowBackground="White"
                  GridLinesVisibility="All"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Top"
                  Margin="0,50,0,100"
                  Height="300">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="80"/>
                <DataGridTextColumn Header="Lecturer Name" Binding="{Binding LecturerName}" Width="150"/>
                <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="120"/>
                <DataGridTextColumn Header="Hourly Rate" Binding="{Binding HourlyRate}" Width="120"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>

                <!-- PDF Open button -->
                <DataGridTemplateColumn Header="Supporting Document" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Open PDF" Click="OpenPDF_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,20">
            <Button x:Name="ApproveButton"
                    Content="Approve"
                    Width="120"
                    Height="35"
                    Margin="10"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="ApproveButton_Click"/>

            <Button x:Name="RejectButton"
                    Content="Reject"
                    Width="120"
                    Height="35"
                    Margin="10"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="RejectButton_Click"/>

            <Button x:Name="RefreshButton"
                    Content="Refresh"
                    Width="120"
                    Height="35"
                    Margin="10"
                    Background="#2196F3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="RefreshButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
